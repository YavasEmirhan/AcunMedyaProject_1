@model AcunMedyaProject_1.Models.TBL_Project
@{
    ViewBag.Title = "UpdateProject";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<h2>UpdateProject</h2>


<style>
    h2 {
        text-align: center;
        font-size: 28px;
        font-weight: bold;
        margin-top: 40px;
        color: #333;
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    }
    form {
        max-width: 600px;
        margin: 20px auto;
        font-family: Arial, sans-serif;
        padding: 20px;
        border: 1px solid #ddd;
        border-radius: 10px;
        box-shadow: 2px 2px 10px rgba(0,0,0,0.1);
    }

    label {
        display: block;
        margin-top: 15px;
        font-weight: bold;
        color: #333;
    }

    input[type="text"],
    input[type="file"],
    textarea {
        width: 100%;
        padding: 10px;
        margin-top: 5px;
        border: 1px solid #ccc;
        border-radius: 5px;
    }

    button {
        margin-top: 20px;
        padding: 12px 20px;
        background-color: #4CAF50;
        color: white;
        border: none;
        border-radius: 5px;
        cursor: pointer;
        font-size: 16px;
    }

        button:hover {
            background-color: #45a049;
        }
</style>
<form method="post">
    @Html.HiddenFor(x => x.ProjectID)
    <label>proje adı</label>
    @Html.TextBoxFor(x => x.ProjectName)
    <br />
    <label>proje açıklaması</label>
    @Html.TextBoxFor(x => x.Description)
    <br />
    <label>Proje Linki</label>
    @Html.TextBoxFor(x => x.ProectLink)
    <br />
    <label>proje resmi1</label>
    @Html.TextBoxFor(x => x.Image1)
    <br />
    <label>proje resmi2</label>
    @Html.TextBoxFor(x => x.Image2)
    <br />
    <label>proje resmi3</label>
    @Html.TextBoxFor(x => x.Image3)
    <br />
    <label>Category ID</label>
    @Html.TextBoxFor(x => x.CategoryID)
    <button>Güncelle</button>
</form>