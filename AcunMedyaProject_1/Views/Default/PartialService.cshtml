
@model List<AcunMedyaProject_1.Models.TBL_Services>

<style>
    #services {
        background: #f9f9f9;
        background-image: url('https://www.transparenttextures.com/patterns/graphy-dark.png');
        padding: 60px 0;
    }

    .section-title h2 {
        font-family: 'Playfair Display', serif;
        font-size: 32px;
        font-weight: bold;
        color: #2c4964;
        text-align: center;
        margin-bottom: 10px;
    }

    .section-title p {
        font-family: 'Poppins', sans-serif;
        color: #5a656e;
        font-size: 16px;
        text-align: center;
        margin-bottom: 30px;
    }

    .service-item {
        background: #ffffff;
        padding: 30px 20px;
        border-radius: 12px;
        box-shadow: 0 8px 20px rgba(0, 0, 0, 0.08);
        text-align: center;
        transition: all 0.3s ease;
        width: 100%;
    }

        .service-item:hover {
            transform: translateY(-8px);
            box-shadow: 0 12px 28px rgba(0, 0, 0, 0.12);
        }

        .service-item .icon {
            margin-bottom: 20px;
            font-size: 48px;
            color: #d43076;
        }

        .service-item h4 {
            font-size: 20px;
            font-weight: 700;
            margin-bottom: 15px;
            color: #2c4964;
            font-family: 'Roboto', sans-serif;
        }

        .service-item p {
            font-size: 15px;
            color: #6c757d;
            line-height: 1.6;
            font-family: 'Poppins', sans-serif;
        }

    .stretched-link {
        text-decoration: none;
        color: inherit;
    }
</style>



<section id="services" class="services section">

    <!-- Section Title -->
    <div class="container section-title" data-aos="fade-up">
        <h2 style="color: #00327d" >Services</h2>
        
    </div><!-- End Section Title -->

    <div class="container">

        <div class="row gy-4">
            @foreach (var item in Model)
            {

                <div class="col-xl-3 col-md-6 d-flex" data-aos="fade-up" data-aos-delay="100">
                    <div class="service-item position-relative">
                        <div class="icon"><i class="@item.ImageURL"></i></div>
                        <h4><a href="" class="stretched-link">@item.Title</a></h4>
                        <p>@item.Description2</p>
                    </div>
                </div>
            }
            <!-- End Service Item -->

        </div>

    </div>

</section>
