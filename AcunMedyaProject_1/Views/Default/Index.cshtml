<style>
/* Genel font ayarları */
body {
    font-family: 'Poppins', sans-serif;
    color: #444;
    background-color: #f8f9fa;
}

/* Başlıklar */
h1, h2, h3, h4, h5, h6 {
    font-weight: 700;
    color: #00327d;
    letter-spacing: 0.5px;
}

/* Paragraflar */
p {
    font-size: 16px;
    color: #555;
    line-height: 1.8;
    margin-bottom: 15px;
}

/* Butonlar */
.btn {
    font-weight: 600;
    border-radius: 8px;
    padding: 10px 22px;
    transition: background-color 0.3s ease, transform 0.3s ease;
}

.btn-primary {
    background-color: #00327d;
    border: none;
}

.btn-primary:hover {
    background-color: #001e4d;
    transform: translateY(-2px);
}

.btn-secondary {
    background-color: #d43076;
    border: none;
}

.btn-secondary:hover {
    background-color: #b02564;
    transform: translateY(-2px);
}

.btn-success {
    background-color: #22c55e;
    border: none;
}

.btn-success:hover {
    background-color: #16a34a;
    transform: translateY(-2px);
}

.btn-danger {
    background-color: #ef4444;
    border: none;
}

.btn-danger:hover {
    background-color: #dc2626;
    transform: translateY(-2px);
}

/* Section Başlıkları */
.section-title h2 {
    font-size: 36px;
    font-weight: bold;
    margin-bottom: 15px;
    position: relative;
}

.section-title h2::after {
    content: "";
    width: 60px;
    height: 4px;
    background: #d43076;
    display: block;
    margin: 10px auto 0;
    border-radius: 2px;
}

/* Kartlar (Portfolio ve Resume için) */
.project-card, .resume-item {
    background: #fff;
    border-radius: 12px;
    box-shadow: 0 6px 18px rgba(0, 0, 0, 0.08);
    transition: transform 0.3s ease, box-shadow 0.3s ease;
}

.project-card:hover, .resume-item:hover {
    transform: translateY(-5px);
    box-shadow: 0 12px 24px rgba(0, 0, 0, 0.15);
}

/* Footer */
.footer {
    background: #00327d;
    color: #fff;
    padding: 30px 0;
    text-align: center;
    font-size: 14px;
}

.footer a {
    color: #d43076;
}

.footer a:hover {
    color: #ffffff;
}

/* Scroll-to-top butonu */
#scroll-top {
    background: #d43076;
    width: 44px;
    height: 44px;
    border-radius: 50%;
    font-size: 22px;
    transition: background-color 0.3s ease;
}

#scroll-top:hover {
    background: #b02564;
}

/* Responsive */
media (max-width: 768px) {
    .hero h2 {
        font-size: 28px;
        line-height: 38px;
    }
    .hero p {
        font-size: 16px;
    }
}
</style>



