@model List<AcunMedyaProject_1.Models.TBL_About>

<style>
    /* About Section */
    #about {
        background: #f9f9f9;
        background-image: url('https://www.transparenttextures.com/patterns/graphy-dark.png');
        padding: 80px 0;
    }

    .section-title h2 {
        font-family: 'Playfair Display', serif;
        font-size: 38px;
        font-weight: bold;
        color: #00327d;
        text-align: center;
        margin-bottom: 15px;
        letter-spacing: 1px;
        position: relative;
    }

    .section-title p {
        font-family: 'Poppins', sans-serif;
        color: #555;
        font-size: 17px;
        text-align: center;
        margin-bottom: 40px;
        max-width: 700px;
        margin-left: auto;
        margin-right: auto;
    }

    .content h2 {
        font-size: 28px;
        font-weight: 700;
        color: #1d3557;
        margin-bottom: 20px;
        font-family: 'Poppins', sans-serif;
        letter-spacing: 0.5px;
    }

    .content p, .content strong p {
        color: #6c757d;
        font-size: 16px;
        line-height: 1.8;
        font-family: 'Open Sans', sans-serif;
        margin-bottom: 20px;
    }

    .content ul {
        list-style: none;
        padding: 0;
        margin-top: 10px;
    }

        .content ul li {
            margin-bottom: 12px;
            font-size: 15px;
            color: #444;
            display: flex;
            align-items: center;
            transition: all 0.3s ease;
        }

            .content ul li:hover {
                transform: translateX(5px);
                color: #00327d;
            }

            .content ul li i {
                color: #d43076;
                margin-right: 10px;
                font-size: 18px;
            }

    .img-fluid {
        border-radius: 16px;
        box-shadow: 0 8px 24px rgba(0, 0, 0, 0.1);
        transition: transform 0.4s ease, box-shadow 0.4s ease;
    }

        .img-fluid:hover {
            transform: scale(1.05);
            box-shadow: 0 12px 30px rgba(0, 0, 0, 0.15);
        }

    .row {
        align-items: center;
    }
    .content ul li i {
        color: #00327d; /* Mavi ton uyumlu renk */
        margin-right: 12px;
        font-size: 20px;
        transition: all 0.4s ease;
        text-shadow: 0 0 3px rgba(0, 50, 125, 0.4);
    }

    /* Hover durumunda ikon davranışı */
    .content ul li:hover i {
        color: #d43076; /* Hover'da pembeye dönüşüyor */
        transform: rotate(20deg);
        text-shadow: 0 0 8px rgba(212, 48, 118, 0.6);
</style>




<section id="about" class="about section">

    <!-- Section Title -->
    <div class="container section-title" data-aos="fade-up">
        <h2 style="color: #00327d">About</h2>
        <p style="color: #00327d ">DESCRİPTİON1 İ KULLANMAYACAĞIM İÇİN BURAYA DES1 GİBİ BAK SABİT YAZI OLACAK</p>
    </div><!-- End Section Title -->

    <div class="container" data-aos="fade-up" data-aos-delay="100">
        @foreach (var item in Model)
        {
            <div class="row gy-4 justify-content-center">
                <div class="col-lg-4">
                    <img src="@item.ImageUrl" class="img-fluid" alt="">
                </div>
                <div class="col-lg-8 content">
                    <h2>Computer Engineer,Software Programmer</h2>
                    <strong>
                        <p class="fst-italic py-3">
                            @item.Description1
                        </p>
                    </strong>
                    <div class="row">
                        <div class="col-lg-6">
                            <ul>
                                <li><i class="bi bi-chevron-right"></i> <strong>Birthday:</strong> <span></span>@item.BirthDay</li>
                                <li><i class="bi bi-chevron-right"></i> <strong>Website:</strong> <span>@item.Website</span></li>
                                <li><i class="bi bi-chevron-right"></i> <strong>Phone:</strong> <span>+90 @item.Phone</span></li>
                                <li><i class="bi bi-chevron-right"></i> <strong>City:</strong> <span>@item.City</span></li>
                            </ul>
                        </div>
                        <div class="col-lg-6">
                            <ul>
                                <li><i class="bi bi-chevron-right"></i> <strong>Age:</strong> <span>@item.Age</span></li>
                                <li><i class="bi bi-chevron-right"></i> <strong>Degree:</strong> <span>@item.Degree</span></li>
                                <li><i class="bi bi-chevron-right"></i> <strong>Email:</strong> <span>@item.Email</span></li>
                                <li><i class="bi bi-chevron-right"></i> <strong>Freelance:</strong> <span>@item.Freelance</span></li>
                            </ul>
                        </div>
                    </div>
                    <p class="py-3">
                        @item.Description2
                    </p>
                </div>
            </div>
        }


    </div>

</section>
