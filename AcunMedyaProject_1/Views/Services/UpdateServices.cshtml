@{
    ViewBag.Title = "UpdateServices";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<h2>UpdateServices</h2>

<style>
    h2 {
        text-align: center;
        font-size: 28px;
        font-weight: bold;
        margin-top: 40px;
        color: #333;
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    }
    form {
        max-width: 600px;
        margin: 40px auto;
        padding: 30px;
        background-color: #ffffff;
        border-radius: 12px;
        box-shadow: 0 8px 20px rgba(0, 0, 0, 0.08);
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    }

    label {
        display: block;
        margin-bottom: 8px;
        margin-top: 20px;
        font-weight: 600;
        font-size: 14px;
        color: #333;
    }

    input[type="text"] {
        width: 100%;
        padding: 12px 15px;
        margin-top: 5px;
        border: 1px solid #ccc;
        border-radius: 8px;
        background-color: #f9f9f9;
        font-size: 14px;
        transition: border-color 0.3s ease, background-color 0.3s ease;
    }

    input[type="text"]:focus {
        border-color: #3b82f6;
        background-color: #ffffff;
        outline: none;
    }

    button {
        width: 100%;
        padding: 14px;
        margin-top: 30px;
        background-color: #10b981;
        color: white;
        font-size: 16px;
        font-weight: 600;
        border: none;
        border-radius: 8px;
        cursor: pointer;
        transition: background-color 0.3s ease;
        text-align: center;
    }

    button:hover {
        background-color: #059669;
    }

    media (max-width: 768px) {
        form {
            padding: 20px;
        }

        input[type="text"],
        button {
            font-size: 14px;
            padding: 10px;
        }

        label {
            font-size: 13px;
        }
    }
</style>


<form method="post">

    @Html.HiddenFor(model => model.ServiceID)
    <label>Açıklama1</label>
    @Html.TextBoxFor(model => model.Description1)
    <br />
    <label>Başlık</label>
    @Html.TextBoxFor(model => model.Title)
    <br />
    <label>Resim</label>
    @Html.TextBoxFor(model => model.ImageURL)
    <br />
    <label>Açıklama 2</label>
    @Html.TextBoxFor(model => model.Description2)
    <br />
    <button type="submit">Güncelle</button>


</form>