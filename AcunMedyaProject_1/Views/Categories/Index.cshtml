@model List<AcunMedyaProject_1.Models.TBL_Category>
@{

    ViewBag.Title = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
    int count = 0;
}

<h2>Kategori sayfası</h2>

<style>
    h2 {
        text-align: center;
        font-size: 28px;
        font-weight: bold;
        margin-top: 40px;
        color: #333;
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    }
    .container {
        max-width: 1200px;
        margin: 40px auto;
        padding: 20px;
        background: #ffffff;
        border-radius: 12px;
        box-shadow: 0 8px 20px rgba(0, 0, 0, 0.08);
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    }

    table.table {
        width: 100%;
        border-collapse: collapse;
        background-color: #f9f9f9;
        border-radius: 10px;
        overflow: hidden;
    }

    thead {
        background: #f1f5f9;
    }

        thead th, thead td {
            text-align: center;
            padding: 15px;
            font-size: 16px;
            font-weight: 600;
            color: #333;
            border-bottom: 2px solid #dee2e6;
        }

    tbody td {
        text-align: center;
        padding: 12px 15px;
        font-size: 14px;
        color: #555;
        border-bottom: 1px solid #e9ecef;
        background-color: #ffffff;
        transition: background-color 0.3s ease;
    }

    tbody tr:hover td {
        background-color: #f1faff;
    }

    .btn {
        padding: 8px 16px;
        font-size: 14px;
        font-weight: 600;
        border-radius: 6px;
        text-decoration: none;
        transition: all 0.3s ease;
        display: inline-block;
        margin: 5px;
    }

    .btn-danger {
        background-color: #ef4444;
        color: white;
        border: none;
    }

        .btn-danger:hover {
            background-color: #dc2626;
        }

    .btn-dark {
        background-color: #374151;
        color: white;
        border: none;
    }

        .btn-dark:hover {
            background-color: #1f2937;
        }

    .btn-primary {
        background-color: #3b82f6;
        color: white;
        border: none;
        margin-top: 20px;
    }

        .btn-primary:hover {
            background-color: #2563eb;
        }
</style>

<div class="container">
    <table class="table table-bordered">
        <thead>
            <tr>
                <td>Kategori sayısı</td>
                <th>CategoryId</th>
                <th>Category Name</th>
                <th>Güncelleme</th>
                <th>Sil</th>
            </tr>
        </thead>
        <tbody>
            @* for while do while foreach*@

            @foreach (var item in Model)
            {
                count++;
                <tr>
                    <td>@count</td>
                    <td>@item.CategoryID</td>
                    <td>@item.CategoryName</td>
                    <td><a href="/Categories/UpdateCategory/@item.CategoryID" class="btn btn-danger"> Güncelle</a></td>
                    <td> <a href="/Categories/DeleteCategory/@item.CategoryID" class="btn btn-dark">Sil </a></td>
                </tr>
            }

        </tbody>
    </table>
    <a href="/Categories/CreateCategory/" class="btn btn-primary"> Oluştur</a>
</div>