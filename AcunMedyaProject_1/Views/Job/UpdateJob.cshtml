@model AcunMedyaProject_1.Models.TBL_Job
@{
    ViewBag.Title = "UpdateJob";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<h2>UpdateJob</h2>

<style>
    h2 {
        text-align: center;
        font-size: 28px;
        font-weight: bold;
        margin-top: 40px;
        color: #333;
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    }
    form {
        max-width: 700px;
        margin: 40px auto;
        padding: 30px;
        background-color: #ffffff;
        border-radius: 12px;
        box-shadow: 0 8px 20px rgba(0, 0, 0, 0.08);
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    }

    label {
        display: block;
        margin-bottom: 8px;
        font-weight: 600;
        font-size: 14px;
        color: #333;
        margin-top: 20px;
    }

    input[type="text"],
    input[type="date"],
    textarea {
        width: 100%;
        padding: 12px 15px;
        margin-top: 5px;
        border: 1px solid #ccc;
        border-radius: 8px;
        background: #f9f9f9;
        font-size: 14px;
        transition: all 0.3s ease;
    }

    input[type="text"]:focus,
    input[type="date"]:focus,
    textarea:focus {
        border-color: #3b82f6;
        background-color: #ffffff;
        outline: none;
    }

    textarea {
        resize: vertical;
        min-height: 120px;
    }

    .btn {
        width: 100%;
        padding: 14px;
        margin-top: 30px;
        font-size: 16px;
        font-weight: 600;
        border-radius: 8px;
        border: none;
        cursor: pointer;
        transition: background 0.3s ease;
        text-align: center;
    }

    .btn-primary {
        background-color: #3b82f6;
        color: white;
    }

    .btn-primary:hover {
        background-color: #2563eb;
    }

    media (max-width: 768px) {
        form {
            padding: 20px;
        }

        input[type="text"],
        input[type="date"],
        textarea,
        .btn {
            font-size: 14px;
            padding: 10px;
        }

        label {
            font-size: 13px;
        }
    }
</style>


<form method="post">

    @Html.HiddenFor(m => m.JobID)
    label for="JobTitle">Job Title</label>
    @Html.TextBoxFor(m => m.Title)
    <br />
    <label>İş Başlangıç Tarihi</label>
    @Html.TextBoxFor(m => m.StartDate)
    <br />
    <label>İş Bitiş Tarihi</label>
    @Html.TextBoxFor(m => m.EndDate)
    <br />
    <label>Şirket İsmi</label>
    @Html.TextBoxFor(m => m.CompanyName)
    <br />
    <label>Job Description</label>
    @Html.TextAreaFor(m => m.Description)
    <br />
    <button class="btn btn-primary"> Güncelle</button>

</form>
